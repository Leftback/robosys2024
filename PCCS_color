def main():
    # 色相環の対応表
    color_dict = {
        1: "pR/紫みの赤",
        2: "R/赤",
        3: "yR/黄みの赤",
        4: "rO/赤みのだいだい",
        5: "O/だいだい",
        6: "yO/黄みのだいだい",
        7: "rY/赤みの黄",
        8: "Y/黄",
        9: "gY/緑みの黄",
        10: "YG/黄緑",
        11: "yG/黄みの緑",
        12: "G/緑",
        13: "bG/青みの緑",
        14: "BG/青緑",
        15: "BG/青緑",
        16: "gB/緑みの青",
        17: "B/青",
        18: "B/青",
        19: "pB/紫みの青",
        20: "V/青紫",
        21: "bP/青みの紫",
        22: "P/紫",
        23: "rP/赤みの紫",
        24: "RP/赤紫"
    }

    # 全角数字を半角数字に変換する関数
    def zenkaku_to_hankaku(zenkaku_str):
        return zenkaku_str.translate(str.maketrans(
            '０１２３４５６７８９',
            '0123456789'
        ))

    # ユーザーからの入力を受け取る
    try:
        user_input = input("1～24の数値を入力してください: ")
        user_input = zenkaku_to_hankaku(user_input)  # 全角数字を半角数字に変換
        user_input = int(user_input)
        if 1 <= user_input <= 24:
            print(f"{user_input}: {color_dict[user_input]}")
        else:
            print("入力が範囲外です。1～24の数値を入力してください。")
    except ValueError:
        print("無効な入力です。数値を入力してください。")

if __name__ == "__main__":
    main()
